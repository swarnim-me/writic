<%- include('partials/header.ejs') %>
<div class="myForm">
    <form class="row myForm-form mx-4 justify-content-center py-4 px-2 bg-light" method="POST" action="/auth/login">
        <div class="col-12">
            <h1 class="text-center myForm-head text-dark mb-4">Login</h1>
        </div>
        <div class="col-12 form-group">
            <input type="text" class="form-control" placeholder="Username" name="username">
        </div>
        <div class="col-12 form-group">
            <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
        <div class="form-check col-12 form-group">
            <input type="checkbox" id="accept-terms" class="" name="terms">
            <label for="accept-terms" class="form-check-label">Remember me</label>
        </div>
        <div class="col-12 form-group">
            <button class="btn btn-lg btn-dark myForm-submit">Login</button>
        </div>

    </form>
</div>
<%- include('partials/footer.ejs') %>